{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2020",
    "newLine": "lf",
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "Node",
    "baseUrl": "./",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
